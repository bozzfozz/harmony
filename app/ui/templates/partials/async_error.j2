{% import "partials/_strings.j2" as strings %}
{% import "partials/alerts.j2" as alert_macros %}

{{ alert_macros.render_alerts(alerts) }}
{% if retry_url %}
  <div class="table-controls">
    <button type="button"
            hx-get="{{ retry_url }}"
            {% if retry_target %}hx-target="{{ retry_target }}"{% endif %}
            hx-swap="outerHTML"
            data-test="fragment-retry">
      {{ strings.button_label(retry_label_key) }}
    </button>
  </div>
{% endif %}
