{% import "partials/_strings.j2" as strings %}
{% import "partials/tables.j2" as tables %}

{% set _ = strings.button_label("spotify.track.view") %}

{% if time_range_options %}
  <div class="spotify-time-range" role="group" aria-label="{{ strings.spotify_time_range_group_label() }}">
    {% for option in time_range_options %}
      <button type="button"
              class="spotify-time-range__button{% if option.active %} is-active{% endif %}"
              hx-get="{{ option.url }}"
              hx-target="#{{ fragment.identifier }}"
              hx-swap="outerHTML"
              aria-pressed="{{ 'true' if option.active else 'false' }}"
              data-test="{{ option.test_id }}">
        {{ strings.spotify_time_range_option_label(option.label_key) }}
      </button>
    {% endfor %}
  </div>
{% endif %}

<div class="table-external-link-hint">
  <span class="table-external-link__icon" aria-hidden="true">â†—</span>
  <span>{{ strings.spotify_external_link_hint() }}</span>
</div>
{{ tables.render_table_fragment(fragment) }}
