{% macro app_name() %}Harmony Operator Console{% endmacro %}

{% macro page_title(page_id) -%}
  {%- set titles = {
    "login": "Login",
    "dashboard": "Dashboard",
    "activity": "Activity",
    "watchlist": "Watchlist",
  } -%}
  {%- if page_id in titles -%}
    {{ titles[page_id] }} · {{ app_name() }}
  {%- else -%}
    {{ page_id }} · {{ app_name() }}
  {%- endif -%}
{%- endmacro %}

