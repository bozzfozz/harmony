{% extends "layouts/base.j2" %}
{% import "partials/_strings.j2" as strings %}

{% block header_actions %}
  <form id="logout-form" method="post" action="/ui/logout">
    <input type="hidden" name="csrftoken" value="{{ csrf_token }}" />
    <button type="submit">{{ strings.button_label("logout") }}</button>
  </form>
{% endblock %}

{% block page_header %}
  <section>
    <h2>{{ strings.section_heading(layout.page_id) }}</h2>
    <p>{{ strings.operations_page_intro() }}</p>
    <p>
      <a href="{{ dashboard_url }}">{{ strings.link_text("operations.back_to_dashboard") }}</a>
    </p>
  </section>
{% endblock %}

{% block main %}
  {% if downloads_fragment %}
    <section class="page-section page-section--card" aria-labelledby="{{ downloads_fragment.identifier }}-heading">
      <header class="page-section__header">
        <h3 id="{{ downloads_fragment.identifier }}-heading" class="page-section__title">
          {{ strings.section_heading("downloads") }}
        </h3>
        <a class="page-section__link" href="{{ downloads_page_url }}">
          {{ strings.link_text("operations.view_downloads") }}
        </a>
      </header>
      <p class="page-section__description">{{ strings.downloads_page_intro() }}</p>
      <div id="{{ downloads_fragment.identifier }}"
           class="async-fragment"
           role="region"
           aria-live="polite"
           aria-labelledby="{{ downloads_fragment.identifier }}-heading"
           data-fragment="operations-downloads"
           {% if downloads_fragment.event_name %}data-live-event="{{ downloads_fragment.event_name }}"{% endif %}
          hx-get="{{ downloads_fragment.url }}"
          hx-trigger="{{ downloads_fragment.trigger }}"
          hx-target="{{ downloads_fragment.target }}"
          hx-swap="{{ downloads_fragment.swap }}"
          hx-on="htmx:responseError:handleHtmxError(event)">
        <p class="async-fragment__placeholder">
          {{ strings.fragment_loading(downloads_fragment.loading_key) }}
        </p>
      </div>
    </section>
  {% endif %}

  {% if jobs_fragment %}
    <section class="page-section page-section--card" aria-labelledby="{{ jobs_fragment.identifier }}-heading">
