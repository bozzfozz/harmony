           {% if jobs_fragment.event_name %}data-live-event="{{ jobs_fragment.event_name }}"{% endif %}
          hx-get="{{ jobs_fragment.url }}"
          hx-trigger="{{ jobs_fragment.trigger }}"
          hx-target="{{ jobs_fragment.target }}"
          hx-swap="{{ jobs_fragment.swap }}"
          hx-on="htmx:responseError:handleHtmxError(event)">
        <p class="async-fragment__placeholder">
