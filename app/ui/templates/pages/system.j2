{% extends "layouts/base.j2" %}
{% import "partials/_strings.j2" as strings %}

{% block header_actions %}
  <form id="logout-form" method="post" action="/ui/logout">
    <input type="hidden" name="csrftoken" value="{{ csrf_token }}" />
    <button type="submit">{{ strings.button_label("logout") }}</button>
  </form>
{% endblock %}

{% block page_header %}
  <section>
    <h2>{{ strings.section_heading(layout.page_id) }}</h2>
    <p>{{ strings.system_page_intro() }}</p>
    <p>
      <a href="{{ metrics_url }}" target="_blank" rel="noopener">
        {{ strings.link_text("system.metrics") }}
      </a>
    </p>
  </section>
{% endblock %}

{% block main %}
  <section class="page-section page-section--card" aria-labelledby="system-liveness-heading">
    <header class="page-section__header">
      <h3 id="system-liveness-heading" class="page-section__title">{{ strings.system_section_title("liveness") }}</h3>
      <form id="{{ liveness_form.identifier }}"
            class="form form--inline"
            method="{{ liveness_form.method }}"
            action="{{ liveness_form.action }}"
            hx-get="{{ liveness_form.action }}"
            hx-target="{{ liveness_fragment.target }}"
            hx-swap="{{ liveness_fragment.swap }}">
        <button type="submit">{{ strings.button_label(liveness_form.submit_label_key) }}</button>
      </form>
    </header>
    <div id="{{ liveness_fragment.identifier }}"
         class="async-fragment"
         role="region"
         aria-live="polite"
         aria-labelledby="system-liveness-heading"
         data-fragment="system-liveness"
         hx-get="{{ liveness_fragment.url }}"
         hx-trigger="{{ liveness_fragment.trigger }}"
         hx-target="{{ liveness_fragment.target }}"
         hx-swap="{{ liveness_fragment.swap }}">
      <p class="async-fragment__placeholder">
        {{ strings.fragment_loading(liveness_fragment.loading_key) }}
      </p>
    </div>
  </section>

