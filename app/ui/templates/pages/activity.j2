{% extends "layouts/base.j2" %}
{% import "partials/_strings.j2" as strings %}

{% block header_actions %}
  <form id="logout-form" method="post" action="/ui/logout">
    <input type="hidden" name="csrftoken" value="{{ csrf_token }}" />
    <button type="submit">{{ strings.button_label("logout") }}</button>
  </form>
{% endblock %}

{% block page_header %}
  <section>
    <h2>{{ strings.section_heading(layout.page_id) }}</h2>
    <p>{{ strings.activity_page_intro() }}</p>
    <p>
      <a href="{{ operations_url }}">{{ strings.link_text("operations.back_to_overview") }}</a>
    </p>
  </section>
{% endblock %}

{% block main %}
  <section class="page-section page-section--card" aria-labelledby="{{ activity_fragment.identifier }}-heading">
    <h3 id="{{ activity_fragment.identifier }}-heading" class="page-section__title">
      {{ strings.section_heading(layout.page_id) }}
    </h3>
    <div id="{{ activity_fragment.identifier }}"
         class="async-fragment"
         role="region"
         aria-live="polite"
         aria-labelledby="{{ activity_fragment.identifier }}-heading"
         data-fragment="activity-table"
         {% if activity_fragment.event_name %}data-live-event="{{ activity_fragment.event_name }}"{% endif %}
         hx-get="{{ activity_fragment.url }}"
         hx-trigger="{{ activity_fragment.trigger }}"
         hx-target="{{ activity_fragment.target }}"
         hx-swap="{{ activity_fragment.swap }}"
         hx-on="htmx:responseError:handleHtmxError(event)">
      <p class="async-fragment__placeholder">
        {{ strings.fragment_loading(activity_fragment.loading_key) }}
      </p>
    </div>
  </section>
{% endblock %}
