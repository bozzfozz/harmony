{% extends "layouts/base.j2" %}
{% import "partials/_strings.j2" as strings %}

{% block header_actions %}
  <form id="logout-form" method="post" action="/ui/logout">
    <input type="hidden" name="csrftoken" value="{{ csrf_token }}" />
    <button type="submit">{{ strings.button_label("logout") }}</button>
  </form>
{% endblock %}

{% block page_header %}
  <section>
    <h2>{{ strings.section_heading(layout.page_id) }}</h2>
    <p>{{ strings.watchlist_page_intro() }}</p>
    <p>
      <a href="{{ operations_url }}">{{ strings.link_text("operations.back_to_overview") }}</a>
    </p>
  </section>
{% endblock %}

{% block main %}
  <section class="page-section page-section--card" aria-labelledby="watchlist-form-heading">
    <h3 id="watchlist-form-heading" class="page-section__title">{{ strings.section_heading("watchlist") }}</h3>
    <form id="{{ watchlist_form.identifier }}"
          class="form"
          method="{{ watchlist_form.method }}"
          action="{{ watchlist_form.action }}"
          hx-post="{{ watchlist_form.action }}"
          hx-target="{{ watchlist_fragment.target }}"
          hx-swap="{{ watchlist_fragment.swap }}">
      <input type="hidden" name="csrftoken" value="{{ csrf_token }}" />
      {% for field in watchlist_form.fields %}
        <div class="form-field">
          <label for="{{ field.name }}">{{ strings.form_label(field.label_key) }}</label>
          <input type="{{ field.input_type }}"
                 name="{{ field.name }}"
                 id="{{ field.name }}"
                 {% if field.required %}required{% endif %} />
        </div>
      {% endfor %}
      <button type="submit">{{ strings.button_label(watchlist_form.submit_label_key) }}</button>
    </form>
  </section>

  <section class="page-section page-section--card" aria-labelledby="{{ watchlist_fragment.identifier }}-heading">
    <h3 id="{{ watchlist_fragment.identifier }}-heading" class="page-section__title">{{ strings.section_heading("watchlist") }}</h3>
    <div id="{{ watchlist_fragment.identifier }}"
         class="async-fragment"
         role="region"
         aria-live="polite"
         aria-labelledby="{{ watchlist_fragment.identifier }}-heading"
         data-fragment="watchlist-table"
         {% if watchlist_fragment.event_name %}data-live-event="{{ watchlist_fragment.event_name }}"{% endif %}
         hx-get="{{ watchlist_fragment.url }}"
         hx-trigger="{{ watchlist_fragment.trigger }}"
         hx-target="{{ watchlist_fragment.target }}"
         hx-swap="{{ watchlist_fragment.swap }}">
      <p class="async-fragment__placeholder">
        {{ strings.fragment_loading(watchlist_fragment.loading_key) }}
      </p>
    </div>
  </section>
{% endblock %}
