{% extends "layouts/base.j2" %}
{% import "partials/_strings.j2" as strings %}
{% import "partials/tables.j2" as tables %}

{% block header_actions %}
  <form id="logout-form" method="post" action="/ui/logout">
    <input type="hidden" name="csrftoken" value="{{ csrf_token }}" />
    <button type="submit">{{ strings.button_label("logout") }}</button>
  </form>
{% endblock %}

{% block page_header %}
  <section>
    <h2>{{ strings.section_heading(layout.page_id) }}</h2>
    <p id="session-role" data-role="{{ session.role }}">{{ strings.dashboard_role_label(session.role) }}</p>
  </section>
{% endblock %}

{% block main %}
  <section>
    <h3>{{ strings.dashboard_features_heading() }}</h3>
    {{ tables.render_table(features_table) }}
  </section>
  <section>
    <h3>{{ strings.dashboard_activity_heading() }}</h3>
    <div id="{{ activity_fragment.identifier }}"
         hx-get="{{ activity_fragment.url }}"
         hx-trigger="{{ activity_fragment.trigger }}"
         hx-target="{{ activity_fragment.target }}"
         hx-swap="{{ activity_fragment.swap }}">
      <p>{{ strings.fragment_loading(activity_fragment.loading_key) }}</p>
    </div>
  </section>
  {% if actions %}
    <section>
      <h3>{{ strings.dashboard_actions_heading() }}</h3>
      <div class="dashboard-actions">
        {% for action in actions %}
          <button id="{{ action.identifier }}" type="button">{{ strings.button_label(action.label_key) }}</button>
        {% endfor %}
      </div>
    </section>
  {% endif %}
{% endblock %}
