{% extends "layouts/dashboard.j2" %}
{% import "partials/_strings.j2" as strings %}
{% import "partials/tables.j2" as tables %}
{% import "components/layout_blocks.j2" as layout_blocks %}

{% block header_actions %}
  <form id="logout-form" method="post" action="/ui/logout">
    <input type="hidden" name="csrftoken" value="{{ csrf_token }}" />
    <button type="submit">{{ strings.button_label("logout") }}</button>
  </form>
{% endblock %}

{% block page_header %}
  <section>
    <h2>{{ strings.section_heading(layout.page_id) }}</h2>
    <p id="session-role" data-role="{{ session.role }}">{{ strings.dashboard_role_label(session.role) }}</p>
  </section>
{% endblock %}

{% block dashboard_kpis %}
  {% if kpi_cards %}
    {{ layout_blocks.render_kpi_cards(kpi_cards, None) }}
  {% endif %}
  <section class="page-section page-section--card" aria-labelledby="dashboard-status-heading">
    <header class="page-section__header">
      <h3 id="dashboard-status-heading" class="page-section__title">{{ strings.dashboard_status_heading() }}</h3>
    </header>
    <div id="{{ status_fragment.identifier }}"
         class="async-fragment"
         role="region"
         aria-live="polite"
         aria-labelledby="dashboard-status-heading"
         data-fragment="dashboard-status"
         hx-get="{{ status_fragment.url }}"
         hx-trigger="{{ status_fragment.trigger }}"
         hx-target="{{ status_fragment.target }}"
         hx-swap="{{ status_fragment.swap }}"
         hx-on="htmx:responseError:handleHtmxError(event)">
      <p class="async-fragment__placeholder">{{ strings.fragment_loading(status_fragment.loading_key) }}</p>
    </div>
  </section>

  <section class="page-section page-section--card" aria-labelledby="dashboard-health-heading">
    <header class="page-section__header">
      <h3 id="dashboard-health-heading" class="page-section__title">{{ strings.dashboard_health_heading() }}</h3>
    </header>
    <div id="{{ health_fragment.identifier }}"
         class="async-fragment"
         role="region"
         aria-live="polite"
         aria-labelledby="dashboard-health-heading"
         data-fragment="dashboard-health"
         hx-get="{{ health_fragment.url }}"
         hx-trigger="{{ health_fragment.trigger }}"
         hx-target="{{ health_fragment.target }}"
         hx-swap="{{ health_fragment.swap }}"
         hx-on="htmx:responseError:handleHtmxError(event)">
      <p class="async-fragment__placeholder">{{ strings.fragment_loading(health_fragment.loading_key) }}</p>
    </div>
  </section>

  <section class="page-section page-section--card" aria-labelledby="dashboard-workers-heading">
    <header class="page-section__header">
      <h3 id="dashboard-workers-heading" class="page-section__title">{{ strings.dashboard_workers_heading() }}</h3>
    </header>
    <div id="{{ workers_fragment.identifier }}"
         class="async-fragment"
         role="region"
         aria-live="polite"
         aria-labelledby="dashboard-workers-heading"
         data-fragment="dashboard-workers"
         hx-get="{{ workers_fragment.url }}"
         hx-trigger="{{ workers_fragment.trigger }}"
         hx-target="{{ workers_fragment.target }}"
         hx-swap="{{ workers_fragment.swap }}"
         hx-on="htmx:responseError:handleHtmxError(event)">
      <p class="async-fragment__placeholder">{{ strings.fragment_loading(workers_fragment.loading_key) }}</p>
    </div>
  </section>
{% endblock %}

{% block dashboard_primary %}
  <section>
    <h3>{{ strings.dashboard_features_heading() }}</h3>
    {{ tables.render_table(features_table) }}
  </section>

  <section class="page-section page-section--card" aria-labelledby="dashboard-activity-heading">
    <header class="page-section__header">
      <h3 id="dashboard-activity-heading" class="page-section__title">{{ strings.dashboard_activity_heading() }}</h3>
    </header>
    <div id="{{ activity_fragment.identifier }}"
         class="async-fragment"
         role="region"
         aria-live="polite"
         aria-labelledby="dashboard-activity-heading"
         data-fragment="dashboard-activity"
         hx-get="{{ activity_fragment.url }}"
         hx-trigger="{{ activity_fragment.trigger }}"
         hx-target="{{ activity_fragment.target }}"
         hx-swap="{{ activity_fragment.swap }}"
         hx-on="htmx:responseError:handleHtmxError(event)">
      <p class="async-fragment__placeholder">{{ strings.fragment_loading(activity_fragment.loading_key) }}</p>
    </div>
  </section>
{% endblock %}

{% block dashboard_secondary %}
  <section class="page-section page-section--card" aria-labelledby="dashboard-actions-heading">
    <h3 id="dashboard-actions-heading" class="page-section__title">{{ strings.dashboard_actions_heading() }}</h3>
    {% if actions %}
      <div class="dashboard-actions">
        {% for action in actions %}
          <button id="{{ action.identifier }}"
                  class="dashboard-action-button"
                  type="button"
                  {{ 'hx-' + action.method }}="{{ action.url }}"
                  hx-target="{{ action.target }}"
                  hx-swap="{{ action.success_swap }}"
                  hx-on="htmx:responseError:handleHtmxError(event)"
                  data-role="dashboard-action-button"
                  data-success-swap="{{ action.success_swap }}"
                  data-error-swap="{{ action.error_swap }}"
                  {% if action.confirm_text %}hx-confirm="{{ action.confirm_text }}"{% endif %}>
            {{ strings.button_label(action.label_key) }}
          </button>
        {% endfor %}
      </div>
    {% endif %}
    <h4 class="dashboard-action-state__title">{{ strings.dashboard_sync_heading() }}</h4>
    {% include "partials/dashboard_action_state.j2" with sync_state=sync_state, swap_mode=None %}
  </section>
  {% if sidebar_sections %}
    {{ layout_blocks.render_sidebar_sections(sidebar_sections, None) }}
  {% endif %}
{% endblock %}
