{% extends "layouts/base.j2" %}
{% import "partials/_strings.j2" as strings %}

{% block header_actions %}
  <form id="logout-form" method="post" action="/ui/logout">
    <input type="hidden" name="csrftoken" value="{{ csrf_token }}" />
    <button type="submit">{{ strings.button_label("logout") }}</button>
  </form>
{% endblock %}

{% block page_header %}
  <section>
    <h2>{{ strings.section_heading(layout.page_id) }}</h2>
    <p>{{ strings.soulseek_page_intro() }}</p>
  </section>
{% endblock %}

{% block main %}
  <section class="page-section page-section--card" aria-labelledby="{{ status_fragment.identifier }}-heading">
    <h3 id="{{ status_fragment.identifier }}-heading" class="page-section__title">{{ strings.soulseek_status_heading() }}</h3>
    <div id="{{ status_fragment.identifier }}"
         class="async-fragment"
         role="status"
         aria-live="polite"
         aria-labelledby="{{ status_fragment.identifier }}-heading"
         data-fragment="soulseek-status"
         hx-get="{{ status_fragment.url }}"
         hx-trigger="{{ status_fragment.trigger }}"
         hx-target="{{ status_fragment.target }}"
         hx-swap="{{ status_fragment.swap }}">
      <p class="async-fragment__placeholder">{{ strings.fragment_loading(status_fragment.loading_key) }}</p>
      {% include "partials/soulseek_status.j2" with connection_badge=None, integration_badge=None, provider_table=None %}
    </div>
  </section>

  {% if suggested_tasks %}
    <section class="page-section page-section--card"
             aria-labelledby="soulseek-tasks-heading"
             data-test="soulseek-tasks">
      <h3 id="soulseek-tasks-heading" class="page-section__title">{{ strings.soulseek_tasks_heading() }}</h3>
      <p class="page-section__description">{{ strings.soulseek_tasks_description() }}</p>
      <p class="page-section__meta" data-test="soulseek-tasks-completion">{{ strings.soulseek_tasks_completion(tasks_completion) }}</p>
      <ol class="task-list">
        {% for task in suggested_tasks %}
          <li class="task-list__item{% if task.completed %} task-list__item--completed{% endif %}"
              data-test="soulseek-task-{{ task.identifier }}">
            <div class="task-list__content">
              <span class="task-list__status" aria-hidden="true">{% if task.completed %}✓{% else %}○{% endif %}</span>
              <div class="task-list__body">
                <h4>{{ strings.soulseek_task_title(task.title_key) }}</h4>
                {% if task.description_key %}
                  <p>{{ strings.soulseek_task_description(task.description_key) }}</p>
                {% endif %}
              </div>
            </div>
          </li>
        {% endfor %}
      </ol>
    </section>
  {% endif %}

  <section class="page-section page-section--card" aria-labelledby="{{ configuration_fragment.identifier }}-heading">
    <h3 id="{{ configuration_fragment.identifier }}-heading" class="page-section__title">{{ strings.soulseek_configuration_heading() }}</h3>
    <div id="{{ configuration_fragment.identifier }}"
         class="async-fragment"
         role="region"
         aria-live="polite"
         aria-labelledby="{{ configuration_fragment.identifier }}-heading"
         data-fragment="soulseek-configuration"
         hx-get="{{ configuration_fragment.url }}"
         hx-trigger="{{ configuration_fragment.trigger }}"
         hx-target="{{ configuration_fragment.target }}"
         hx-swap="{{ configuration_fragment.swap }}">
      <p class="async-fragment__placeholder">{{ strings.fragment_loading(configuration_fragment.loading_key) }}</p>
      {% include "partials/soulseek_config.j2" with table=None %}
    </div>
  </section>

  <section class="page-section page-section--card" aria-labelledby="{{ uploads_fragment.identifier }}-heading">
    <h3 id="{{ uploads_fragment.identifier }}-heading" class="page-section__title">{{ strings.soulseek_uploads_heading() }}</h3>
    <div id="{{ uploads_fragment.identifier }}"
         class="async-fragment"
         role="region"
         aria-live="polite"
         aria-labelledby="{{ uploads_fragment.identifier }}-heading"
         data-fragment="soulseek-uploads"
         hx-get="{{ uploads_fragment.url }}"
         hx-trigger="{{ uploads_fragment.trigger }}"
         hx-target="{{ uploads_fragment.target }}"
         hx-swap="{{ uploads_fragment.swap }}">
      <p class="async-fragment__placeholder">{{ strings.fragment_loading(uploads_fragment.loading_key) }}</p>
    </div>
  </section>

  <section class="page-section page-section--card" aria-labelledby="{{ downloads_fragment.identifier }}-heading">
    <h3 id="{{ downloads_fragment.identifier }}-heading" class="page-section__title">{{ strings.soulseek_downloads_heading() }}</h3>
    <div id="{{ downloads_fragment.identifier }}"
         class="async-fragment"
         role="region"
         aria-live="polite"
         aria-labelledby="{{ downloads_fragment.identifier }}-heading"
         data-fragment="soulseek-downloads"
         hx-get="{{ downloads_fragment.url }}"
         hx-trigger="{{ downloads_fragment.trigger }}"
         hx-target="{{ downloads_fragment.target }}"
         hx-swap="{{ downloads_fragment.swap }}">
      <p class="async-fragment__placeholder">{{ strings.fragment_loading(downloads_fragment.loading_key) }}</p>
    </div>
  </section>

  <section class="page-section page-section--card" aria-labelledby="{{ discography_fragment.identifier }}-heading">
    <h3 id="{{ discography_fragment.identifier }}-heading" class="page-section__title">{{ strings.soulseek_discography_heading() }}</h3>
    <div id="{{ discography_fragment.identifier }}"
         class="async-fragment"
         role="region"
         aria-live="polite"
         aria-labelledby="{{ discography_fragment.identifier }}-heading"
         data-fragment="soulseek-discography-jobs"
         hx-get="{{ discography_fragment.url }}"
         hx-trigger="{{ discography_fragment.trigger }}"
         hx-target="{{ discography_fragment.target }}"
         hx-swap="{{ discography_fragment.swap }}">
      <p class="async-fragment__placeholder">{{ strings.fragment_loading(discography_fragment.loading_key) }}</p>
      <p class="async-fragment__meta">{{ strings.soulseek_discography_loading() }}</p>
      {% include "partials/soulseek_discography_jobs.j2" with fragment=None, modal_url=discography_fragment.url, alerts=() %}
    </div>
  </section>

  <section class="page-section page-section--card" aria-labelledby="{{ user_info_fragment.identifier }}-heading">
    <h3 id="{{ user_info_fragment.identifier }}-heading" class="page-section__title">{{ strings.soulseek_user_profile_heading() }}</h3>
    <div id="{{ user_info_fragment.identifier }}"
         class="async-fragment"
         role="region"
         aria-live="polite"
         aria-labelledby="{{ user_info_fragment.identifier }}-heading"
         data-fragment="soulseek-user-info"
         hx-get="{{ user_info_fragment.url }}"
         hx-trigger="{{ user_info_fragment.trigger }}"
         hx-target="{{ user_info_fragment.target }}"
         hx-swap="{{ user_info_fragment.swap }}">
      <p class="async-fragment__placeholder">{{ strings.fragment_loading(user_info_fragment.loading_key) }}</p>
      {% include "partials/soulseek_user_info.j2" with lookup_url=user_info_fragment.url, username="", profile=None, address_items=(), info_items=(), has_profile=False, has_user_status=False, has_user_browse_status=False, user_status_badge=None, user_status_shared=None, user_status_has_shared=False, user_status_message=None, user_browse_badge=None, user_browse_progress=None, user_browse_has_progress=False, user_browse_queue=None, user_browse_has_queue=False, user_browse_message=None %}
    </div>
  </section>

  <section class="page-section page-section--card" aria-labelledby="{{ user_directory_fragment.identifier }}-heading">
    <h3 id="{{ user_directory_fragment.identifier }}-heading" class="page-section__title">{{ strings.soulseek_user_directory_heading() }}</h3>
    <div id="{{ user_directory_fragment.identifier }}"
         class="async-fragment"
         role="region"
         aria-live="polite"
         aria-labelledby="{{ user_directory_fragment.identifier }}-heading"
         data-fragment="soulseek-user-directory"
         hx-get="{{ user_directory_fragment.url }}"
         hx-trigger="{{ user_directory_fragment.trigger }}"
         hx-target="{{ user_directory_fragment.target }}"
         hx-swap="{{ user_directory_fragment.swap }}">
      <p class="async-fragment__placeholder">{{ strings.fragment_loading(user_directory_fragment.loading_key) }}</p>
      {% include "partials/soulseek_user_directory.j2" with browse_url=user_directory_fragment.url, username="", path=None, directories=(), files=(), parent_url=None, has_listing=False, has_user_status=False, has_user_browse_status=False, user_status_badge=None, user_status_shared=None, user_status_has_shared=False, user_status_message=None, user_browse_badge=None, user_browse_progress=None, user_browse_has_progress=False, user_browse_queue=None, user_browse_has_queue=False, user_browse_message=None %}
    </div>
  </section>
{% endblock %}
