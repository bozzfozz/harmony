{% extends "layouts/base.j2" %}

{% block main %}
  <div class="layout-two-column">
    <aside class="layout-two-column__sidebar" aria-label="Sidebar navigation">
      {% block sidebar %}{% endblock %}
    </aside>
    <section class="layout-two-column__content" aria-label="Main content">
      {% block content %}{% endblock %}
    </section>
  </div>
  <div class="layout-two-column__modal-container" data-role="modal-container">
    {% block two_column_modal_container %}{% endblock %}
  </div>
{% endblock %}

{% block modals %}
  {{ super() }}
  {% block two_column_modals %}{% endblock %}
{% endblock %}
