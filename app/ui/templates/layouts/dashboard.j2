{% extends "layouts/base.j2" %}
{% import "partials/modals.j2" as modals %}

{% block main %}
  <div class="layout-dashboard">
    <section class="layout-dashboard__kpis" aria-label="Key performance indicators">
      {% block dashboard_kpis %}{% endblock %}
    </section>
    <div class="layout-dashboard__body">
      <section class="layout-dashboard__primary" aria-label="Primary dashboard content">
        {% block dashboard_primary %}{% endblock %}
      </section>
      <aside class="layout-dashboard__secondary" aria-label="Secondary dashboard content">
        {% block dashboard_secondary %}{% endblock %}
      </aside>
    </div>
  </div>
  <div class="layout-dashboard__modal-container" data-role="modal-container">
    {% block dashboard_modal_container %}{% endblock %}
  </div>
{% endblock %}

{% block modals %}
  {{ modals.render_modals(layout.modals) }}
  <div id="modal-root" data-role="modal-container"></div>
  {% block dashboard_modals %}{% endblock %}
{% endblock %}
